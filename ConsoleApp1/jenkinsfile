pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/dotnet/sdk:9.0'  // Utilisez une version appropri√©e du SDK
        }
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/hamzaaboulkhair/SolveAppp'
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    sh 'dotnet build'
                    sh 'dotnet test'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t solveapp:latest .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run --rm solveapp:latest'
                }
            }
        }
    }
}
